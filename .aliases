if [ -x /usr/local/bin/gls ]; then
  alias ls='gls --color=always'
  alias dir='gdir --color=always'
  alias vdir='gvdir --color=always'
  alias grep='grep --color=always'
  alias egrep='egrep --color=always'
  alias fgrep='fgrep --color=always'
fi

# List all files colorized in long format
alias ll='ls -lh'

# List all files colorized in long format, including dot files
alias la='ls -lha'

# List only directories
alias lsd='ls -ld */'

if [ -x /usr/local/bin/ipython ]; then
  alias ipy='ipython qtconsole --ConsoleWidget.font_family="Consolas" --ConsoleWidget.font_size=13'
fi

if [ -x /usr/local/bin/ipython3 ]; then
  alias ipy3='ipython3 qtconsole --ConsoleWidget.font_family="Consolas" --ConsoleWidget.font_size=13'
fi
